<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_view"
    android:layout_width="467dp"
    android:layout_height="240dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/item_view_selector"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="@drawable/item_block_indicator_focus"
            android:visibility="gone" />

        <SurfaceView
            android:id="@+id/home_surface"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/item_view_selector" />

        <TextView
            android:id="@+id/home_source_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/colorWhite"
            android:textSize="54sp" />

        <TextView
            android:id="@+id/tv_source_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/tv_name_background"
            android:gravity="bottom"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingBottom="5dp"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:visibility="gone" />

    </RelativeLayout>

    <View
        android:id="@+id/home_icon_shadow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorHomeSource" />

</android.support.v7.widget.CardView>