<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Light.NoTitleBar.Fullscreen">
        <!-- Customize your theme here. -->
    </style>

    <style name="SearchRecycler">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:clipChildren">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="AppRecyclerStyle" parent="SearchRecycler">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:clipChildren">false</item>
        <item name="android:padding">35dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="AVLoadingIndicatorView">
        <item name="minWidth">48dip</item>
        <item name="maxWidth">48dip</item>
        <item name="minHeight">48dip</item>
        <item name="maxHeight">48dip</item>
        <item name="indicatorName">BallPulseIndicator</item>
    </style>

    <style name="SearchButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">34dp</item>
        <item name="android:textColor">@drawable/search_btn_selector</item>
        <item name="android:textSize">24sp</item>
        <item name="android:background">@drawable/selector_search_tab_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="SearchImageButton">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">34dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:elevation">2dp</item>
        <item name="android:background">@drawable/selector_search_tab_bg</item>
    </style>

    <style name="BaseCard">
        <item name="android:elevation">3dp</item>
        <item name="cardBackgroundColor">@color/colorAppBackground</item>
    </style>

    <style name="BaseCard.Focused" parent="BaseRootStyle">
        <item name="android:elevation">0dp</item>
        <item name="cardBackgroundColor">@color/colorAppBackground</item>
    </style>

    <style name="BaseRootStyle">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:clickable">true</item>
        <item name="android:descendantFocusability">blocksDescendants</item>
    </style>

    <style name="BaseBottomTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:alpha">0</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:duplicateParentState">true</item>
        <item name="android:maxWidth">150dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_10</item>
    </style>

    <style name="sourceTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="appMenuStyle">
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">55dp</item>
    </style>

    <style name="deleteDialogStyle" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@drawable/background</item>
        <item name="android:windowAnimationStyle">@style/fadeAnimStyle</item>
    </style>

    <style name="fadeAnimStyle">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="deleteDialogButtonStyle">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/dialog_button_background_selector</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@drawable/dialog_button_text_selector</item>
    </style>

    <style name="appArrowStyle">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:visibility">gone</item>
        <item name="android:scaleX">1.3</item>
        <item name="android:scaleY">1.3</item>
    </style>

</resources>
