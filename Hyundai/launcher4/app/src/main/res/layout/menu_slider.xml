<?xml version="1.0" encoding="utf-8"?>
<com.mp3.launcher4.customs.views.SliderView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_slider"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.75"
        android:background="@drawable/background" />

    <View
        android:layout_width="@dimen/slide_width"
        android:layout_height="match_parent"
        android:background="@color/colorSlideBackground" />

    <com.mp3.launcher4.customs.views.SliderIndicatorView
        android:layout_width="@dimen/slide_width"
        android:layout_height="match_parent"
        app:barColor="@android:color/white"
        app:barHeight="30dp" />

    <com.mp3.launcher4.customs.views.LimitedRecyclerView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:descendantFocusability="beforeDescendants"
        android:focusable="false"
        android:focusableInTouchMode="false" />

</com.mp3.launcher4.customs.views.SliderView>


