<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card"
    style="@style/BaseCard.Focused"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="336dp"
        android:layout_height="150dp"
        android:background="@drawable/app_store_banner">

        <ImageView
            android:id="@+id/store_banner_icon"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="49dp"
            android:src="@drawable/ic_app_store_hl" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="42dp"
            android:layout_toEndOf="@id/store_banner_icon"
            android:gravity="center_horizontal"
            android:text="@string/item_store_banner"
            android:textColor="@android:color/white"
            android:textSize="35sp" />

    </RelativeLayout>


</android.support.v7.widget.CardView>